<div class="header">
  <h1>
    <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
</div>

<div class="show-pin">
  <p><%= "#{@pin.text}" %>
    <%= link_to ' Edit Pin', edit_pin_path(@pin), html_options = {class:"fa fa-pencil"} %>
  </p>
  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    
    <%= link_to "#{@pin.url}", @pin.url, html_options = {target:"_blank", class:"url"} %>
    <p>
      <% if @pin.image.url.nil? %>
              <%= image_tag('rails-logo-thumbnail.png') %>
            <% else  %>
           <img src="<%= @pin.image.url(:medium) %>">    
            <% end %>
      </p>
</div>
<br/>
<p>
  
<%= render partial: "shared/repin_form", locals: {pin: @pin} %> 
</p>

  <div class="pins"><div class="pin-container col-md-4">
    <div class="repin">
        <h3>This has been pinned by ... </h3>
        <% @users.each do |user| %>
          <%= user.first_name %>
          <hr/>
        <% end %>
      </div>
  </div>
</div>
<div>
<hr/>
<a href="/">
  <i class="fa fa-backward"></i>
  Back to Home
</a>