<div class="col-md-2">
</div>

<%= form_for @pin, :html => {:class=>"form-horizontal col-md-8"} do |f| %>
	<div class="form-group">
		<label for="pin_title">Title</label>
		<%= f.text_field :title, :class=>"form-control" %>
	</div>

	<div class="form-group">
		<label for="pin_url">URL</label>
		<%= f.text_field :url, :class=>"form-control" %>
	</div>

	<div class="form-group">
		<label for="pin_text">SLUG</label>
		<%= f.text_field :slug, :class=>"form-control" %>
	</div>

	<div class="form-group radio">
		<label for="pin_category_id">Category</label>
		<label class="radio-label"><%= f.radio_button(:category_id, "1", {checked: true}) %>Ruby</label>
		<label class="radio-label"><%= f.radio_button(:category_id, "2") %>Rails</label>
	</div>
	
	<div class="form-group">
		<label for="pin_text">Description</label>
		<%= f.text_area :text, :class=>"form-control" %>
	</div>

	<div class="form-group">
		<label for="pin_image">Image</label>
		<%= f.file_field :image %>
	</div>

	<% if @pin.errors.present? %>
	  <div class="error">
	    <label><%= pluralize(@pin.errors.count, "error") %> prohibited this pin from being saved:</label>
	    <ul>
	      <% @pin.errors.full_messages.each do |msg| %>
	        <li ><%= msg %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>

	<div class="col-md-2">
	</div>
	
	<%= f.submit ( @pin.new_record? ? "Create Pin" : "Edit Pin"), :class=>"btn col-md-8" %>

<% end %>